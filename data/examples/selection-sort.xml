<?xml version="1.0" ?>

<diagram title="Selection Sort" xmlns="http://greenlightning.eu/nsdg"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://greenlightning.eu/nsdg ../nsdg.xml">
	<loop condition="für i = 0 bis n">
		<block>m = i</block>
		<loop condition="für j = i + 1 bis n">
			<branch condition="a[j] \l a[m]">
				<left label="j">
					<block>m = j</block>
				</left>
				<right label="n" />
			</branch>
		</loop>
		<block>
			h = a[m]
			a[m] = a[i]
			a[i] = h
		</block>
	</loop>
</diagram>