<?xml version="1.0" ?>

<diagram title="Insertion Sort" xmlns="http://greenlightning.eu/nsdg"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://greenlightning.eu/nsdg ../nsdg.xml">
	<loop condition="for i from 1 to n - 1">
		<block>
			value = a[i]
			j = i
		</block>
		<loop condition="while j \g 0 AND a[j - 1] \g value">
			<block>
				a[j] = a[j - 1]
				j = j - 1
			</block>
		</loop>
		<block>
			a[j] = value
		</block>
	</loop>
</diagram>